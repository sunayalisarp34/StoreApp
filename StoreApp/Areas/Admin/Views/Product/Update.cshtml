@{
}
@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">
        Ürün Güncelle
    </div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId">Kategori</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary">Ürün Açıklaması</label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Ürün Fiyatı</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-4">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl"/>
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl">Ürün Resmi</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Güncelle
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Ürünler
            </a>
        </div>
    </div>
</form>
