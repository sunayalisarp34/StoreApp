@{
}

@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">
        Ürün Oluştur
    </div>
</div>

<form method="post" asp-action="Create">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId">Kategori</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
            
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Ürün Fiyatı</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Ürünler
            </a>
        </div>
    </div>
</form>