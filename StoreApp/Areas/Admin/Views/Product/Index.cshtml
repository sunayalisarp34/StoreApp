@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Ürünler</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Oluştur
         </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>ImageUrl</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Operasyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product prd in Model){
                <tr>
                    <td>@prd.ProductId</td>
                    <td>
                        <img class="border border-light rounded" src="@prd?.ImageUrl" alt="@prd?.ProductName" width="50"/>
                    </td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" asp-action="Update" asp-route-id="@prd.ProductId">
                                <i class="fa fa-edit"></i>
                                Güncelle</a>
                            <a class="btn btn-secondary" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                                <i class="fa fa-search"></i>
                                Ürün Bilgileri
                            </a>
                            <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@prd.ProductId">
                                <i class="fa fa-trash"></i>
                                Sil
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
