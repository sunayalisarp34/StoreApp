@model LoginModel

<div class="text-center my-4">
	<h6 class="display-6">Giriş</h6>
</div>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div class="text-center">
			<div class="text-danger" asp-validation-summary="All"></div>
		</div>
		<form method="post" asp-action="Login">
			<input type="hidden" asp-for="ReturnUrl"/>

			<div class="form-group my-3">
				<label asp-for="Name">Kullanıcı Adı</label>
				<input asp-for="Name" class="form-control" />
			</div>
			<div class="form-group my-3">
				<label asp-for="Password">Şifre</label>
				<input type="password" asp-for="Password" class="form-control" />
			</div>
			<div class="form-group my-4 d-flex justify-content-center">
				
				<button type="submit" class="btn btn-danger">
					<i class="fa-solid fa-right-from-bracket"></i>
					Giriş Yap
				</button>
				<a class="btn btn-outline-secondary" asp-action="Register">
					<i class="fa-solid fa-user-plus"></i>
					Kayıt Ol
				</a>
			</div>
		</form>
	</div>
	<div class="col-md-3"></div>
</div>

